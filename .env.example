# Grok & Mon Configuration
# ========================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#   nano .env
#
# SECURITY WARNING:
#   - NEVER commit .env files to version control
#   - Use strong, unique passwords for all services
#   - Rotate API keys if they may have been exposed

# =============================================================================
# REQUIRED: Authentication & Security
# =============================================================================

# JWT Secret Key (REQUIRED - generate with: openssl rand -hex 32)
JWT_SECRET_KEY=

# Admin API password (REQUIRED - use a strong password)
ADMIN_PASSWORD=

# Raspberry Pi megaphone SSH (midaswhale@192.168.125.222) - optional, for deploy/test
# PI_SSH_PASSWORD=

# Environment: "development" or "production"
# Production mode requires all security settings to be configured
ENVIRONMENT=development

# =============================================================================
# REQUIRED: Grok AI API
# =============================================================================

# xAI Grok API Key (required for AI decisions)
# Get your key at: https://console.x.ai
XAI_API_KEY=

# =============================================================================
# SENSORS: Govee WiFi Temp/Humidity
# =============================================================================

# Govee API Key (required for Govee H5179 sensor)
# Get your key at: https://developer.govee.com/
# Or via Govee Home app → Settings → About Us → Apply for API Key
GOVEE_API_KEY=

# Optional: Specific device ID (auto-detects if not set)
# GOVEE_DEVICE_ID=XX:XX:XX:XX:XX:XX:XX:XX

# =============================================================================
# SENSORS: Ecowitt Soil Moisture (WH51 via GW1100 gateway)
# =============================================================================

# Ecowitt GW1100 gateway IP (poll from router or use mDNS)
# The gateway exposes local API at http://<ip>/get_livedata_info
# ECOWITT_GATEWAY_IP=192.168.1.105

# =============================================================================
# ACTUATORS: Kasa Smart Plugs
# =============================================================================

# Kasa smart plug IPs (set after pairing with Kasa app)
# Discover IPs with: python -m src.hardware.kasa
#
# Assign static IPs in your router for reliability:
# - Log into router (usually 192.168.1.1)
# - Find DHCP reservation or Address Reservation
# - Add entries for each Kasa plug by MAC address

# Device-specific IPs (use identify-plugs.py to find which is which)
KASA_CO2_SOLENOID_IP=192.168.1.100
KASA_WATER_PUMP_IP=192.168.1.101
KASA_EXHAUST_FAN_IP=192.168.1.102
KASA_CIRC_FAN_IP=192.168.1.103
# KASA_GROW_LIGHT_IP=192.168.1.104

# =============================================================================
# GROW TRACKING
# =============================================================================

# Current grow day (increment daily or let agent track)
GROW_DAY=1

# Current growth stage: SEEDLING, VEGETATIVE, TRANSITION, FLOWERING, LATE_FLOWER
GROWTH_STAGE=SEEDLING

# Light schedule (hours on / hours off)
LIGHT_SCHEDULE=18/6

# =============================================================================
# OPTIONAL: Advanced Configuration
# =============================================================================

# Decision interval in minutes (default: 30)
# DECISION_INTERVAL=30

# Grok model for text decisions (default: grok-4.1-fast)
# GROK_MODEL=grok-4.1-fast

# Grok model for image analysis (default: grok-4)
# GROK_VISION_MODEL=grok-4

# Database path
# DATABASE_PATH=data/grow_data.db

# Timelapse output directory
# TIMELAPSE_DIR=data/timelapse

# =============================================================================
# OPTIONAL: Social/Blockchain (for full deployment)
# =============================================================================

# Twitter API keys (for automated posting)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=

# Monad RPC endpoint
# MONAD_RPC_URL=https://monad-devnet.g.alchemy.com/v2/your-key

# =============================================================================
# DOCKER: Container passwords (required for docker-compose)
# =============================================================================

# EMQX MQTT Broker admin password
# EMQX_ADMIN_PASSWORD=

# Raspberry Pi megaphone SSH (midaswhale@192.168.125.222) - optional, for deploy/test
# PI_SSH_PASSWORD=

# InfluxDB admin password
# INFLUXDB_PASSWORD=

# InfluxDB admin token (generate with: openssl rand -hex 32)
# INFLUXDB_ADMIN_TOKEN=

# Grafana admin password
# GRAFANA_ADMIN_PASSWORD=

# Raspberry Pi megaphone SSH (midaswhale@192.168.125.222) - optional, for deploy/test
# PI_SSH_PASSWORD=

